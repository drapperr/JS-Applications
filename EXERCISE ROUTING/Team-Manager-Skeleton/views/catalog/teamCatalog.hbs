<div class="container">
    {{> header}}
    {{#if hasNoTeam}}
    <a href="#/create" class="btn btn-default">Create Team</a>
    {{/if}}
    <h1>Catalog Page</h1>
    <div>
        {{#each teams}}
        <a href="#/catalog/{{id}}" class="team-box">
            <span class="spanner">Team name</span>
            <span class="title">{{name}}</span>
            <span class="spanner">Description</span>
            {{#if comment}}
            <p>{{comment}}</p>
            {{else}}
            <p>No description</p>
            {{/if}}
        </a>
        {{/each}}
    </div>
</div>

{{> footer}}
{{>header}}

{{#if isMyPet}}
<section class="detailsMyPet">
    <h3>{{pet.name}}</h3>
    <p>Pet counter: <i class="fas fa-heart"></i> {{pet.hearts}}</p>
    <p class="img"><img src="{{pet.imageURL}}"></p>
    <form action="#/pet/edit/{{pet.id}}" method="POST">
        <textarea type="text" name="description">{{pet.description}}</textarea>
        <button class="button"> Save</button>
    </form>
</section>
{{else}}
<section class="detailsOtherPet">
    <h3>{{pet.name}}</h3>
    <p>Pet counter: {{pet.hearts}} <a href="#/pet/giveheart/{{pet.id}}"><button class="button"><i class="fas fa-heart"></i>
                Pet</button></a>
    </p>
    <p class="img"><img src="{{pet.imageURL}}"></p>
    <p class="description">{{pet.description}}</p>
</section>
{{/if}}

{{>footer}}
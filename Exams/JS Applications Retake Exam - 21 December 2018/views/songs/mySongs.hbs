{{>header}}

<section id="mySongsView">
    <div class="background-spotify">
        <div class="song-container">
            <h1>My Songs</h1>
           {{#each songs}}
            <div class="song">
                <h5>Title: {{title}}</h5>
                <h5>Artist: {{artist}}</h5>
                <img class="cover" src="{{imageURL}}" />
                <p>Likes: {{likes}}; Listened {{listened}} times</p>
                <a href="#/songs/remove/{{id}}"><button type="button" class="btn btn-danger mt-4">Remove</button></a>
                <a href="#/songs/listen/{{id}}"><button type="button" class="btn btn-success mt-4">Listen</button></a>
                <p>Likes: {{likes}}</p>
                <a href="#/songs/like/{{id}}"><button type="button" class="btn btn-primary mt-4">Like</button></a>
            </div>
           {{/each}}
        </div>
    </div>
</section>

{{>footer}}